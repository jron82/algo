{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2018", "esnext.asynciterable"],
    "paths": {
      "App/*": ["./src/*"]
    }
  }
}
